{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/std:c++20",
                "/I${workspaceFolder}\\include",
                "/nologo",
                "/Fe${workspaceFolder}\\bin\\main.exe",
                "/Fo${workspaceFolder}\\bin\\",
                "${workspaceFolder}\\src\\*.cpp",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: cl.exe"
        },
    ]
}